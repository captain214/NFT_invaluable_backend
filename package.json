{
    "name": "streak-backend",
    "version": "1.0.0",
    "description": "Streak Backend",
    "author": "Exyte team",
    "private": true,
    "license": "MIT",
    "scripts": {
        "build:prod": "tsc -p tsconfig.build.json",
        "postbuild:prod": "copyfiles --up 1 src/**/*.json dist",
        "start:dev": "npx nest start --watch",
        "start:prod": "node dist/src/main.js",
        "docker:build": "docker build . -t streak-backend-$(git rev-parse HEAD)",
        "docker:run": "docker run -d -p 4000:4000 --name streak-backend-$(git rev-parse HEAD) streak-backend-$(git rev-parse HEAD)",
        "typeorm": "ts-node node_modules/typeorm/cli.js  -f ormconfig",
        "migration:generate": "yarn run typeorm migration:generate -d src/migrations -n migration-name-here",
        "migration:create": "yarn run typeorm migration:create -d src/migrations -n",
        "migration:revert": "yarn run typeorm migration:revert",
        "migration:run": "yarn typeorm migration:run",
        "schema:drop": "yarn run typeorm schema:drop",
        "watch:dev": "nodemon --config nodemon.json",
        "debug:dev": "nodemon --config nodemon-debug.json",
        "webpack": "webpack --config webpack.config.js --progress",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint --fix . --ext .ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "docs:dev": "vuepress dev -p 7070",
        "docs:build": "DEPLOY_ENV=gh-pages vuepress build",
        "docs:deploy": "yarn docs:build && gh-pages -d .vuepress/dist",
        "entity:create": "ts-node scripts/createEntity.ts"
    },
    "dependencies": {
        "@godaddy/terminus": "^4.9.0",
        "@nestjs/axios": "^0.0.1",
        "@nestjs/cli": "^8.1.1",
        "@nestjs/common": "^8.0.0",
        "@nestjs/config": "^1.0.0",
        "@nestjs/core": "^8.0.0",
        "@nestjs/jwt": "^8.0.0",
        "@nestjs/microservices": "^8.0.0",
        "@nestjs/passport": "^8.0.0",
        "@nestjs/platform-express": "^8.0.0",
        "@nestjs/swagger": "^5.0.0",
        "@nestjs/terminus": "^7.2.0",
        "@nestjs/typeorm": "^8.0.1",
        "@types/lodash": "^4.14.171",
        "aws-sdk": "^2.941.0",
        "bcrypt": "^5.0.1",
        "class-transformer": "^0.4.0",
        "class-validator": "^0.13.1",
        "compression": "^1.7.4",
        "date-fns": "^2.23.0",
        "ethereumjs-util": "^7.1.0",
        "express": "^4.17.1",
        "express-rate-limit": "^5.3.0",
        "file-type": "^16.5.0",
        "helmet": "^4.6.0",
        "ipfs-http-client": "^51.0.1",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.21",
        "mime-types": "^2.1.31",
        "morgan": "^1.10.0",
        "nats": "^2.1.0",
        "passport": "^0.4.1",
        "passport-jwt": "^4.0.0",
        "pg": "^8.6.0",
        "reflect-metadata": "^0.1.13",
        "request-context": "^2.0.0",
        "rxjs": "^7.2.0",
        "source-map-support": "^0.5.19",
        "swagger-ui-express": "^4.1.6",
        "truffle-assertions": "^0.9.2",
        "typeorm": "^0.2.34",
        "typeorm-transactional-cls-hooked": "^0.1.21",
        "uint8arrays": "^2.1.10",
        "uuid": "^8.3.2",
        "web3": "^1.5.0"
    },
    "devDependencies": {
        "@nestjs/testing": "^8.0.0",
        "@openzeppelin/contracts": "^4.2.0",
        "@truffle/hdwallet-provider": "^1.4.2",
        "@types/bcrypt": "^5.0.0",
        "@types/compression": "^1.7.1",
        "@types/ethereum-protocol": "^1.0.2",
        "@types/express": "^4.17.13",
        "@types/express-rate-limit": "^5.1.3",
        "@types/faker": "^5.5.7",
        "@types/file-type": "^10.9.1",
        "@types/helmet": "^4.0.0",
        "@types/jest": "^26.0.24",
        "@types/jsonwebtoken": "^8.5.4",
        "@types/mime-types": "^2.1.0",
        "@types/morgan": "^1.9.3",
        "@types/node": "^16.0.1",
        "@types/passport-jwt": "^3.0.6",
        "@types/supertest": "^2.0.11",
        "@types/uuid": "^8.3.1",
        "@types/webpack-env": "^1.16.2",
        "@typescript-eslint/eslint-plugin": "^4.28.2",
        "@typescript-eslint/eslint-plugin-tslint": "^4.28.2",
        "@typescript-eslint/parser": "^4.28.2",
        "clean-webpack-plugin": "^4.0.0-alpha.0",
        "copyfiles": "^2.4.1",
        "cross-env": "^7.0.3",
        "eslint": "^7.30.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-import-helpers": "^1.1.0",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "eslint-plugin-unicorn": "^34.0.1",
        "faker": "^5.5.3",
        "gh-pages": "^3.2.0",
        "husky": "^7.0.1",
        "jest": "^27.0.4",
        "lint-staged": "~11.0.0",
        "nodemon": "^2.0.7",
        "prettier": "^2.3.1",
        "supertest": "^6.1.3",
        "ts-jest": "^27.0.3",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "tslint": "^6.1.3",
        "typescript": "^4.3.2",
        "vuepress": "^1.8.2",
        "webpack": "^5.43.0",
        "webpack-cli": "^4.7.0",
        "webpack-node-externals": "^3.0.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "eslint --fix",
            "git add"
        ]
    }
}
